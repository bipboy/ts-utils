{
  "name": "@bipboys/ts-utils",
  "version": "0.0.4",
  "description": "Simple typescript functions",
  "author": "Bipboys Dev Team",
  "sideEffects": false,
  "main": "./build/node/index.js",
  "module": "./build/esm/index.js",
  "types": "./types/index.d.ts",
  "files": [
    "build/",
    "types/",
    "!build/*.tsbuildinfo",
    "!build/**/tests/",
    "index.js",
    "index.esnext"
  ],
  "scripts": {
    "build": "npm run build:clean && pnpm run build-esm && npm run build-node && npm run build:types",
    "build:clean": "rimraf ./build && mkdir build",
    "build-esm": "swc ./src -d build/esm -C module.type=es6",
    "build-node": "swc ./src -d build/node -C module.type=commonjs",
    "build:types": "tsc -p tsconfig.json",
    "clean": "rimraf ./node_modules && npm run build:clean"
  },
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@bipboys/typescript-preset": "0.0.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.8",
    "@types/node": "^18.11.0",
    "process": "0.11.10",
    "rimraf": "^3.0.2",
    "typescript": "4.8.4"
  }
}
