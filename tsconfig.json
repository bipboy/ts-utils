{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJs",
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "noImplicitThis": false,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "types": ["node", "jest"]
  },
  "extends": "@bipboys/typescript-preset/tsconfig.base.json",
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "index.ts"]
}
